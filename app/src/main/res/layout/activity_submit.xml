<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start Date"
        android:id="@+id/StartDate"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Date"
        android:id="@+id/EndDate"
        android:layout_below="@+id/StartDate"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="item_id"
        android:id="@+id/item_id"
        android:layout_below="@+id/EndDate"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your email"
        android:layout_below="@+id/item_id"
        android:id="@+id/Borrowemail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lender email"
        android:id="@+id/Lenderemail"
        android:layout_below="@+id/Borrowemail"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Lenderemail">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton"
            android:layout_alignBottom="@+id/radioButton"
            android:layout_toEndOf="@+id/item_id"
            android:layout_toRightOf="@+id/item_id"
            android:text="Collection" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Lenderemail"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/item_id"
            android:layout_toStartOf="@+id/item_id"
            android:text="Delivery" />
    </RadioGroup>

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/EndDate"
        android:layout_alignRight="@+id/EndDate"
        android:layout_below="@+id/Lenderemail"
        android:layout_marginTop="132dp"
        android:text="Submit" />


</RelativeLayout>
